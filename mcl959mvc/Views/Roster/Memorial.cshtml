@model mcl959mvc.Models.MemorialViewModel
@{
    ViewData["Title"] = "Roster";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.HasClaim("isAdmin", "true");
    var isMember = User.HasClaim("isMember", "true");
    var isRegistered = User.HasClaim("isRegistered", "true");
}

<h2>@Model.DisplayName</h2>
<p>Died: @Model.DiedOn.ToShortDateString()</p>

<div id="descriptionSection">
    <div id="descriptionDisplay" contenteditable="false" style="min-height:100px; border:1px solid #ccc; padding:8px;">
        @Html.Raw(Model.Memorial.Description)
    </div>
    <a href="javascript:void(0);" id="editDescription" @(isAdmin ? "" : "style='display:none;'")>Edit</a>
    <a href="javascript:void(0);" id="saveDescription" style="display:none;">Save</a>
    <a href="javascript:void(0);" id="cancelEdit" style="display:none;">Cancel</a>
</div>

<form id="editMemorialForm" method="post" asp-action="EditMemorialDescription" asp-controller="Roster" style="display:none;">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="description" id="descriptionInput" />
    <input type="hidden" name="save" id="saveInput" />
</form>


<h3>Comments</h3>
<table class="table">
    <thead>
        <tr>
            <th width="20%">User</th>
            <th width="50%">Message</th>
            <th width="20%">Time</th>
            <th width="10%">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var comment in Model.Comments)
    {
        <tr>
            <td>@comment.UserId</td>
            <td>@comment.Message</td>
            <td>@comment.TimeStamp.ToString("g")</td>
            <td>
                @if (isAdmin)
                {
                    <a onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this comment?')) { document.getElementById('delete-comment-@comment.Id').submit(); }"
                        href="#">Delete</a>
                    <form id="delete-comment-@comment.Id" asp-action="DeleteComment" asp-controller="Roster" method="post" style="display:none;">
                        <input type="hidden" name="id" value="@comment.Id" />
                        <input type="hidden" name="parentId" value="@Model.Memorial.RosterId" />
                        @Html.AntiForgeryToken()
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if (isRegistered)
{
    <h4>Add a Comment</h4>
    <form asp-action="AddComment" asp-controller="Roster" method="post">
        <input type="hidden" name="TableSource" value="Memorial" />
        <input type="hidden" name="ParentId" value="@Model.Memorial.RosterId" />
        <div class="form-group">
            <label for="UserId">Comment As</label>
            <input type="text" name="UserId" class="form-control" value="@User.Identity.Name" />
            <label for="Message">Comment</label>
            <textarea name="Message" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Comment</button>
    </form>
}
else
{
    <p>You must <a asp-area="Identity" asp-page="/Account/Login">log in</a> or <a asp-area="Identity" asp-page="/Account/Register">register</a> to post a comment.</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#miMember').addClass('selected');
        });
        document.addEventListener('DOMContentLoaded', function () {
            var editBtn = document.getElementById('editDescription');
            var saveBtn = document.getElementById('saveDescription');
            var cancelBtn = document.getElementById('cancelEdit');
            var descDiv = document.getElementById('descriptionDisplay');
            var form = document.getElementById('editMemorialForm');
            var descInput = document.getElementById('descriptionInput');
            var saveInput = document.getElementById('saveInput');

            if (editBtn) {
                editBtn.addEventListener('click', function () {
                    descDiv.contentEditable = "true";
                    descDiv.focus();
                    editBtn.style.display = "none";
                    saveBtn.style.display = "";
                    cancelBtn.style.display = "";
                });
            }

            if (saveBtn) {
                saveBtn.addEventListener('click', function () {
                    descInput.value = descDiv.innerHTML;
                    saveInput.value = "true";
                    form.submit();
                });
            }

            if (cancelBtn) {
                cancelBtn.addEventListener('click', function () {
                    descInput.value = descDiv.innerHTML;
                    saveInput.value = "false";
                    form.submit();
                });
            }
        });
    </script>
}
