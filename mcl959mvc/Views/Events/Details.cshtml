@model mcl959mvc.Models.EventsAndCommentsModel
@{
    ViewData["Title"] = $"Event {@Model.Event.EventName}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.HasClaim("isAdmin", "true");
    var isRegistered = User.HasClaim("isRegistered", "true");
    var imagePath = !string.IsNullOrEmpty(Model.Event.ImageFileName)
        ? Url.Content($"~/images/{Model.Event.ImageFileName}")
        : Url.Content("~//photos/mcl959bw.jpg"); // fallback image
}

<div class="container mt-4">
    <div class="card mb-4 shadow-sm">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center" style="background: #f8f9fa;">
                <img src="@imagePath"
                     alt="Event Image"
                     class="img-fluid rounded m-3"
                     style="max-width: 100%; max-height: 300px; border: 1px solid #ccc;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Event.EventName</h2>
                    <p class="card-text text-muted mb-2">
                        <strong>Date & Time:</strong>
                        @Model.Event.EventDate?.ToString("f")
                    </p>
                    <hr />
                    <div class="mb-3">
                        <strong>Description:</strong>
                        <div class="mt-2" style="white-space: pre-line;">
                            @Model.Event.EventDescription
                        </div>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Event.Id" class="btn btn-danger btn-sm ms-2">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3>Comments</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th width="20%">User</th>
                <th width="50%">Message</th>
                <th width="20%">Time</th>
                <th width="10%"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var comment in Model.Comments)
        {
            <tr>
                <td>@comment.UserId</td>
                <td>@comment.Message</td>
                <td>@comment.TimeStamp.ToString("g")</td>
                <td>
                    @if (isAdmin)
                    {
                        <a onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this comment?')) { document.getElementById('delete-comment-@comment.Id').submit(); }"
                            href="#">Delete</a>
                        <form id="delete-comment-@comment.Id" asp-action="DeleteComment" asp-controller="Events" method="post" style="display:none;">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <input type="hidden" name="parentId" value="@comment.ParentId" />
                            @Html.AntiForgeryToken()
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (isRegistered)
    {
        <h4>Add a Comment</h4>
        <form asp-action="AddComment" asp-controller="Events" method="post">
            <input type="hidden" name="TableSource" value="Event" />
            <input type="hidden" name="ParentId" value="@Model.Event.Id" />
            <div class="form-group mb-2">
                <label for="UserId">Comment As</label>
                <input type="text" name="UserId" class="form-control" value="@User.Identity.Name" />
            </div>
            <div class="form-group mb-2">
                <label for="Message">Comment</label>
                <textarea name="Message" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
    }
    else
    {
        <p>You must <a asp-area="Identity" asp-page="/Account/Login">log in</a> or <a asp-area="Identity" asp-page="/Account/Register">register</a> to post a comment.</p>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $('#miEvent').addClass('selected');
        });
    </script>
}
