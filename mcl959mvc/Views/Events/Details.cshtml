@model mcl959mvc.Models.EventsAndCommentsModel
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.HasClaim("isAdmin", "true");
    var isMember = User.HasClaim("isMember", "true");
    var isRegistered = User.HasClaim("isRegistered", "true");
}

<h2>Event Details</h2>
<div>
    <dl class="row">
        <div class="col-md-12">
            <form>
                <div class="form-group">
                    <label asp-for="Event.EventName" class="control-label"></label>
                    <input asp-for="Event.EventName" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="Event.EventDescription" class="control-label"></label>
                    <textarea asp-for="Event.EventDescription" class="form-control" rows="8" style="width:100%; min-width:100%; min-height:200px;" readonly="readonly"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Event.EventDate" class="control-label"></label>
                    <input asp-for="Event.EventDate" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group">
                    @if (isAdmin)
                    {
                        <input type="submit" value="Edit" class="btn btn-danger" formaction="@Url.Action("Edit", "Events", new { id = Model.Id })" />
                    }
                </div>
                <div class="form-group">
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </dl>
</div>
<h3>Comments</h3>
<table class="table">
    <thead>
        <tr>
            <th width="20%">User</th>
            <th width="50%">Message</th>
            <th width="20%">Time</th>
            <th width="*">
                @if (isAdmin)
                {
                    <a asp-action="AddComment" asp-controller="Events" class="btn btn-primary">Add Comment</a>
                }
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model.Comments)
        {
            <tr>
                <td>@comment.UserId</td>
                <td>@comment.Message</td>
                <td>@comment.TimeStamp.ToString("g")</td>
                <td>
                    @if (isAdmin)
                    {
                        <a asp-action="DeleteComment" asp-controller="Events" asp-route-id="@comment.Id">Delete</a>
                    }
                </td>
            </tr>
        }
</table>

@if (isRegistered)
{
    <h4>Add a Comment</h4>
    <form asp-action="AddComment" asp-controller="Events" method="post">
        <input type="hidden" name="TableSource" value="Event" />
        <input type="hidden" name="ParentId" value="@Model.Event.Id" />
        <div class="form-group">
            <label for="UserId">Comment As</label>
            <input type="text" name="UserId" class="form-control" value="@User.Identity.Name" />
            <label for="Message">Comment</label>
            <textarea name="Message" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Comment</button>
    </form>
}
else
{
    <p>You must <a asp-area="Identity" asp-page="/Account/Login">log in</a> or <a asp-area="Identity" asp-page="/Account/Register">register</a> to post a comment.</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    $(document).ready(function () {
        $('#miEvent').addClass('selected');
    });
</script>
