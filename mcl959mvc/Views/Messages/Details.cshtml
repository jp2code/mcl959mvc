@model mcl959mvc.Models.MessagesModel
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = User.HasClaim("isAdmin", "true");
    var defaultPhotoPath = "/photos/mcl959bw.jpg";
}

<div class="container mt-4">
    <div class="card mb-4 shadow-sm" style="background: #004392; color: #FFD700; border-radius: 8px;">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-top justify-content-center" style="background: #0050AE; border-radius: 8px;">
                <img src="@defaultPhotoPath"
                     alt="Message"
                     class="img-fluid rounded m-3"
                     style="max-width: 100%; max-height: 300px; border: 1px solid #ccc; background: #fff;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Subject</h2>
                    <p class="mb-2">
                        <strong>From:</strong> @Model.Name &lt;@Model.Email&gt;<br />
                        <strong>Date:</strong> @Model.Date.ToString("f")
                    </p>
                    <hr style="border-color: #FFD700;" />
                    <div class="mb-3">
                        <strong>Message:</strong>
                        <div class="mt-2" style="white-space: pre-line;">
                            @Html.Raw(Model.Comments)
                        </div>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
                        @if (isAdmin)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger btn-sm ms-2">Edit</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
