@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @if (Model.HasRosterMatch)
            {
                <div class="form-group">
                    <label asp-for="Input.PersonalEmail"></label>
                    <input asp-for="Input.PersonalEmail" class="form-control" />
                    <span asp-validation-for="Input.PersonalEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PersonalAddress"></label>
                    <input asp-for="Input.PersonalAddress" class="form-control" />
                    <span asp-validation-for="Input.PersonalAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PersonalPhone"></label>
                    <input asp-for="Input.PersonalPhone" class="form-control" />
                    <span asp-validation-for="Input.PersonalPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.WorkEmail"></label>
                    <input asp-for="Input.WorkEmail" class="form-control" />
                    <span asp-validation-for="Input.WorkEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.WorkAddress"></label>
                    <input asp-for="Input.WorkAddress" class="form-control" />
                    <span asp-validation-for="Input.WorkAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.WorkPhone"></label>
                    <input asp-for="Input.WorkPhone" class="form-control" />
                    <span asp-validation-for="Input.WorkPhone" class="text-danger"></span>
                </div>
            }
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
